<html t:type="loginLayout" title="login"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd" xmlns:p="tapestry:parameter">

    <div class="jumbotron">
        <h3 class="text-success">
            <span class="glyphicon glyphicon-signal"></span>
            <span class="glyphicon glyphicon-logout"></span>
            ${message:greeting}</h3>
    </div>

    <div class="container">
      <div class="panel panel-default">
        <div class="panel-heading"> Please Login</div>
            <t:form t:id="loginForm" t:clientValidation="NONE" class="form-horizontal">
            <fieldset>
                <legend></legend>
                <div class="form-group has-info">
                   <label class="col-lg-2 control-label" for="username">Login</label>
                   <div class="col-lg-6">
                        <input t:type="textfield" t:id="username" placeholder="Login"/>
                   </div>
                </div>

                <div class="form-group has-info">
                   <label class="col-lg-2 control-label" for="password">Password</label>
                   <div class="col-lg-6">
                        <input t:type="passwordfield" t:id="password" placeholder="Password"/>
                        <!-- <div class="checkbox">
                             <label><input type="checkbox" />Remember me</label>
                         </div> -->
                         <br/>
                         <button class="btn btn-success" type="submit">Sign in</button>
                   </div>
                </div>

               <!--  <t:textfield id="username2"
                     forlabel="username2" labelsize="literal:col-lg-6" colorborder="literal:danger" inputsize="literal:col-lg-2"
                     mixins="formgroup" placeholder="Login2" value="literal:"/> -->
            </fieldset>
        </t:form>
      </div>
    </div>
    <div class="jumbotron">
        <p class="text-info">
            The current time is: ${currentTime}.
        </p>

        <div class="well">
            <span class="glyphicon glyphicon-refresh"></span>
            [<t:pagelink page="Index">refresh</t:pagelink>]
        </div>
    </div>
</html>
